  avgTemperature  String?  // e.g., "20-28Â°C"
  currency        String?  // e.g., "KES"
  language        String?  // e.g., "English, Swahili"
  timezone        String?  // e.g., "EAT (UTC+3)"
  visaInfo        String?  @db.Text

