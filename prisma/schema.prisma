// Blog System
model BlogCategory {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  description     String?
  image           String?
  color           String?  // Brand color for category

  order           Int      @default(0)
  isActive        Boolean  @default(true)

  posts           BlogPost[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([slug])
  @@index([isActive])
}

model BlogPost {
  id              String   @id @default(cuid())
  slug            String   @unique

  // Content
  title           String
  excerpt         String?  @db.Text // Short summary for listings
  content         String   @db.Text // Full post content (HTML/Markdown)

  // Media
  coverImage      String?
  images          String[]
  videoUrl        String?

  // Author
  authorId        String?  // null = SafariPlus team
  authorName      String?  // Override name for guest authors
  authorBio       String?
  authorAvatar    String?

  // Categorization
  categoryId      String?
  tags            String[]

  // SEO
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]
  canonicalUrl    String?

  // Status
  status          BlogPostStatus @default(DRAFT)
  isFeatured      Boolean  @default(false)

  // Submission tracking (for agent/client submissions)
  submittedBy     BlogSubmitterType @default(ADMIN)
  submitterId     String?  // User ID who submitted
  submitter       User?    @relation(fields: [submitterId], references: [id], onDelete: SetNull)

  // Admin review
  reviewedBy      String?  // Admin user ID who reviewed
  reviewedAt      DateTime?
  rejectionReason String?  // If rejected, reason why

  // Engagement
  viewCount       Int      @default(0)
  readingTime     Int?     // Estimated minutes to read

  // Related content
  relatedTourIds  String[] // Related tour IDs
  relatedDestinations String[] // Related destination slugs

  // Relations
  category        BlogCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  publishedAt     DateTime?

  @@index([slug])
  @@index([categoryId])
  @@index([status])
  @@index([isFeatured])
  @@index([publishedAt])
  @@index([submitterId])
  @@index([submittedBy])
}

enum BlogPostStatus {
  DRAFT
  PENDING_APPROVAL
  PUBLISHED
  REJECTED
  ARCHIVED
}

enum BlogSubmitterType {
  ADMIN
  AGENT
  CLIENT
}

// Site-wide FAQs (for homepage and general FAQ page)
model SiteFAQ {
  id              String   @id @default(cuid())

  category        String   @default("general") // "general", "booking", "payment", "tours", etc.
  question        String
  answer          String   @db.Text

  order           Int      @default(0)
  isPublished     Boolean  @default(true)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([order])
  @@index([isPublished])
}
