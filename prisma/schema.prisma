  category        BlogCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  publishedAt     DateTime?

  @@index([slug])
  @@index([categoryId])
  @@index([status])
  @@index([isFeatured])
  @@index([publishedAt])
  @@index([submitterId])
  @@index([submittedBy])
}

enum BlogPostStatus {
  DRAFT
  PENDING_APPROVAL
  PUBLISHED
  REJECTED
  ARCHIVED
}

enum BlogSubmitterType {
  ADMIN
  AGENT
  CLIENT
}

// Site-wide FAQs (for homepage and general FAQ page)
model SiteFAQ {
  id              String   @id @default(cuid())

  category        String   @default("general") // "general", "booking", "payment", "tours", etc.
  question        String
  answer          String   @db.Text

  order           Int      @default(0)
  isPublished     Boolean  @default(true)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([order])
  @@index([isPublished])
}
