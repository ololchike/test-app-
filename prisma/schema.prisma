// SafariPlus Database Schema
// Tour Booking Platform for East Africa

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

enum UserRole {
  CLIENT
  AGENT
  ADMIN
}

enum AccountStatus {
  PENDING
  ACTIVE
  SUSPENDED
  DEACTIVATED
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  emailVerified DateTime?
  password      String?
  name          String?
  firstName     String?
  lastName      String?
  phone         String?
  avatar        String?
  role          UserRole      @default(CLIENT)
  status        AccountStatus @default(ACTIVE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  reviews       Review[]
  wishlist      Wishlist[]
  messages      Message[]     @relation("UserMessages")
  conversations ConversationParticipant[]
  contactMessageReplies ContactMessageReply[]

  // Agent specific
  agent         Agent?

  // Notifications
  notifications Notification[]

  // Blog posts
  blogPosts     BlogPost[]

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  used      Boolean  @default(false)
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@index([email])
}

// ============================================================================
// AGENT (Tour Operator)
// ============================================================================

model Agent {
  id                 String        @id @default(cuid())
  userId             String        @unique
  businessName       String
  businessEmail      String?
  businessPhone      String?
  description        String?
  logo               String?
  coverImage         String?
  website            String?
  address            String?
  city               String?
  country            String?

  // Verification
  licenseNumber      String?
  katoMember         Boolean       @default(false)
  tatoMember         Boolean       @default(false)
  autoMember         Boolean       @default(false)
  verifiedAt         DateTime?
  isVerified         Boolean       @default(false)

  // Business details
  yearsInBusiness    Int?
  toursConducted     Int           @default(0)

  // Commission
  commissionRate     Float         @default(12.0) // Platform commission %

  // Status
  status             AccountStatus @default(PENDING)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // Relations
  user               User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tours              Tour[]
  bookings           Booking[]
  earnings           AgentEarning[]
  withdrawals        WithdrawalRequest[]
  bankDetails        BankDetails?
  assignedMessages   ContactMessage[]
  promoCodes         PromoCode[]

  // Global Catalogs (reusable across tours)
  addonCatalog         AddonCatalog[]
  vehicleCatalog       VehicleCatalog[]
  accommodationCatalog AccommodationCatalog[]

  @@index([userId])
  @@index([status])
  @@index([isVerified])
}

model BankDetails {
  id              String           @id @default(cuid())
  agentId         String           @unique
  bankName        String?
  accountNumber   String?
  accountName     String?
  branchCode      String?
  swiftCode       String?
  mpesaNumber     String?
  mpesaName       String?
  preferredMethod WithdrawalMethod @default(MPESA)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  agent           Agent            @relation(fields: [agentId], references: [id], onDelete: Cascade)
}

// ============================================================================
// GLOBAL CATALOGS (Agent-Level Reusable Items)
// ============================================================================

// Global Add-on Catalog (per agent) - reusable across tours
model AddonCatalog {
  id          String        @id @default(cuid())
  agentId     String
  name        String        // e.g., "Hot Air Balloon Ride"
  description String?
  basePrice   Float         // Default price: $200
  duration    String?       // e.g., "2 hours", "Half day"
  images      String        @default("[]") // JSON array
  type        AddonType     @default(ACTIVITY)
  category    AddonCategory @default(ADVENTURE)
  priceType   String        @default("PER_PERSON") // "PER_PERSON" | "PER_GROUP" | "FLAT"
  childPrice  Float?        // Optional child-specific price
  maxCapacity Int?          // Max people for PER_GROUP pricing (e.g., 4 people per group)
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  agent       Agent         @relation(fields: [agentId], references: [id], onDelete: Cascade)
  tourAddons  TourAddon[]   // Tours using this addon

  @@index([agentId])
  @@index([type])
  @@index([category])
  @@index([isActive])
}

// Global Vehicle Catalog (per agent) - reusable across tours
model VehicleCatalog {
  id              String      @id @default(cuid())
  agentId         String
  type            VehicleType
  name            String      // e.g., "Toyota Land Cruiser 4x4"
  description     String?
  maxPassengers   Int         // Capacity: 6 passengers
  basePricePerDay Float       // Default: $150/day
  currency        String      @default("USD")
  features        String      @default("[]") // JSON array
  images          String      @default("[]") // JSON array
  isActive        Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  agent           Agent       @relation(fields: [agentId], references: [id], onDelete: Cascade)
  tourVehicles    TourVehicle[]

  @@index([agentId])
  @@index([type])
  @@index([isActive])
}

// Global Accommodation Catalog (per agent) - reusable across tours
model AccommodationCatalog {
  id                String            @id @default(cuid())
  agentId           String
  name              String            // e.g., "Serena Safari Lodge"
  description       String?
  tier              AccommodationTier
  basePricePerNight Float             // Default: $350/night
  currency          String            @default("USD")
  images            String            @default("[]") // JSON array
  amenities         String            @default("[]") // JSON array
  location          String?
  rating            Float?
  roomType          String?           // e.g., "DOUBLE", "SUITE", "AIRBNB"
  numberOfRooms     Int?              // Number of rooms (for AIRBNB type)
  numberOfBeds      Int?              // Number of beds per room
  isActive          Boolean           @default(true)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  agent               Agent              @relation(fields: [agentId], references: [id], onDelete: Cascade)
  tourAccommodations  TourAccommodation[]

  @@index([agentId])
  @@index([tier])
  @@index([isActive])
}

// ============================================================================
// TOUR-SPECIFIC ASSIGNMENTS (with price overrides)
// ============================================================================

// Tour-specific add-on assignment with price override
model TourAddon {
  id                 String        @id @default(cuid())
  tourId             String
  addonCatalogId     String

  // Price override (null = use catalog price)
  priceOverride      Float?        // e.g., $150 (instead of catalog $200)
  childPriceOverride Float?

  // Tour-specific settings
  dayNumbers         String        @default("[]") // JSON: Days when available [1, 3, 5]
  isRecommended      Boolean       @default(false)
  sortOrder          Int           @default(0)
  isActive           Boolean       @default(true)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  tour               Tour          @relation(fields: [tourId], references: [id], onDelete: Cascade)
  addonCatalog       AddonCatalog  @relation(fields: [addonCatalogId], references: [id], onDelete: Cascade)
  bookingAddons      BookingAddon[]

  @@unique([tourId, addonCatalogId])
  @@index([tourId])
  @@index([addonCatalogId])
}

// Tour-specific vehicle assignment with price override
model TourVehicle {
  id                   String          @id @default(cuid())
  tourId               String
  vehicleCatalogId     String

  // Price override
  pricePerDayOverride  Float?          // Override catalog price

  // Tour-specific settings
  isDefault            Boolean         @default(false)
  isIncludedInBase     Boolean         @default(false) // Included in base price
  sortOrder            Int             @default(0)
  isActive             Boolean         @default(true)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt

  tour                 Tour            @relation(fields: [tourId], references: [id], onDelete: Cascade)
  vehicleCatalog       VehicleCatalog  @relation(fields: [vehicleCatalogId], references: [id], onDelete: Cascade)
  bookingVehicles      BookingVehicleNew[]

  @@unique([tourId, vehicleCatalogId])
  @@index([tourId])
  @@index([vehicleCatalogId])
}

// Tour-specific accommodation assignment with price override
model TourAccommodation {
  id                     String               @id @default(cuid())
  tourId                 String
  accommodationCatalogId String

  // Price override
  pricePerNightOverride  Float?

  // Tour-specific settings
  availableDays          String               @default("[]") // JSON: Days available [1, 2, 3, 4]
  tierOverride           AccommodationTier?   // Override tier for this tour
  isDefault              Boolean              @default(false)
  sortOrder              Int                  @default(0)
  isActive               Boolean              @default(true)
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt

  tour                   Tour                 @relation(fields: [tourId], references: [id], onDelete: Cascade)
  accommodationCatalog   AccommodationCatalog @relation(fields: [accommodationCatalogId], references: [id], onDelete: Cascade)
  bookingAccommodations  BookingAccommodationNew[]

  @@unique([tourId, accommodationCatalogId])
  @@index([tourId])
  @@index([accommodationCatalogId])
}

// ============================================================================
// TOURS & PACKAGES
// ============================================================================

enum TourStatus {
  DRAFT
  PENDING_REVIEW
  ACTIVE
  PAUSED
  ARCHIVED
}

enum TourType {
  SAFARI
  BEACH
  MOUNTAIN
  CULTURAL
  ADVENTURE
  WILDLIFE
  GORILLA_TREKKING
  BIRD_WATCHING
  PHOTOGRAPHY
  HONEYMOON
  FAMILY
  LUXURY
  BUDGET
}

enum DifficultyLevel {
  EASY
  MODERATE
  CHALLENGING
}

enum AccommodationTier {
  BUDGET
  MID_RANGE
  LUXURY
  ULTRA_LUXURY
}

// Vehicle types for safari tours
enum VehicleType {
  SAFARI_VAN          // Standard 7-seater safari van with pop-up roof
  LAND_CRUISER        // 4x4 Land Cruiser (6 pax) - premium option
  EXTENDED_CRUISER    // Extended Land Cruiser (8 pax) - luxury
  OVERLAND_TRUCK      // Large overland truck for group safaris
  PRIVATE_VEHICLE     // Customer's own vehicle
}

// Add-on types for categorization
enum AddonType {
  ACTIVITY      // Activities like balloon safari, hiking
  SERVICE       // Services like airport transfer, guide
  EQUIPMENT     // Equipment rental like binoculars, camera
  UPGRADE       // Upgrades like private vehicle, premium meals
}

// Add-on categories for filtering
enum AddonCategory {
  ADVENTURE      // Balloon safari, bungee, etc.
  CULTURAL       // Village visit, cooking class
  WILDLIFE       // Extra game drives, night safari
  TRANSFER       // Airport transfers, inter-park
  EQUIPMENT      // Equipment rental
  WELLNESS       // Spa, yoga, etc.
  DINING         // Special dining experiences
}

enum WithdrawalMethod {
  MPESA
  BANK
}

enum ContactReplyRole {
  ADMIN
  AGENT
}

enum EarningType {
  BOOKING
  BONUS
  ADJUSTMENT
  REFUND
}

model Tour {
  id               String      @id @default(cuid())
  agentId          String
  slug             String      @unique
  title            String
  subtitle         String?
  description      String
  highlights       String    @default("[]") // JSON array
  included         String    @default("[]") // JSON array
  excluded         String    @default("[]") // JSON array

  // Location
  destination      String
  country          String
  region           String?
  startLocation    String?
  endLocation      String?
  latitude         Float?
  longitude        Float?

  // Duration
  durationDays     Int
  durationNights   Int

  // Pricing
  basePrice        Float
  currency         String      @default("USD")
  pricePerPerson   Boolean     @default(true)
  childPrice       Float?
  infantPrice      Float?
  singleSupplement Float?

  // Capacity
  minGroupSize     Int         @default(1)
  maxGroupSize     Int         @default(20)

  // Media
  coverImage       String?
  images           String    @default("[]") // JSON array
  videoUrl         String?

  // Categorization
  tourType         String    @default("[]") // JSON array of TourType values
  difficulty       DifficultyLevel?
  bestSeason       String    @default("[]") // JSON array of months

  // Status
  status           TourStatus  @default(DRAFT)
  featured         Boolean     @default(false)
  viewCount        Int         @default(0)

  // Deposit & Cancellation Policy
  depositEnabled       Boolean   @default(false)
  depositPercentage    Float     @default(30)    // Percentage of total for deposit (e.g., 30 = 30%)
  freeCancellationDays Int       @default(14)    // Days before start for free cancellation

  // SEO
  metaTitle        String?
  metaDescription  String?

  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  // Relations
  agent            Agent       @relation(fields: [agentId], references: [id], onDelete: Cascade)
  itinerary        Itinerary[]
  vehicles         Vehicle[]   // Legacy - keep for backwards compatibility
  accommodationOptions AccommodationOption[] // Legacy
  activityAddons   ActivityAddon[] // Legacy
  bookings         Booking[]
  reviews          Review[]
  wishlist         Wishlist[]
  seasonalPricing  SeasonalPricing[]
  availability     TourAvailability[]
  pricing          TourPricing?
  availabilityHolds AvailabilityHold[]

  // New catalog-based relations (with price overrides)
  tourAddons         TourAddon[]
  tourVehicles       TourVehicle[]
  tourAccommodations TourAccommodation[]

  @@index([agentId])
  @@index([status])
  @@index([destination])
  @@index([country])
  @@index([basePrice])
  @@index([featured])
}

// ============================================================================
// VEHICLES FOR SAFARI TOURS
// ============================================================================

model Vehicle {
  id              String      @id @default(cuid())
  tourId          String
  type            VehicleType
  name            String      // e.g., "Toyota Land Cruiser 4x4"
  description     String?

  // Capacity
  maxPassengers   Int         // Maximum passengers for this vehicle

  // Pricing
  pricePerDay     Float       // Additional price per day for this vehicle
  currency        String      @default("USD")

  // Features
  features        String      @default("[]") // JSON array: ["Pop-up roof", "4x4", "Air conditioning"]
  images          String      @default("[]") // JSON array of image URLs

  // Availability
  isDefault       Boolean     @default(false) // If true, this is the default vehicle for the tour
  isActive        Boolean     @default(true)
  sortOrder       Int         @default(0)

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  tour            Tour        @relation(fields: [tourId], references: [id], onDelete: Cascade)
  bookingVehicles BookingVehicle[]

  @@index([tourId])
  @@index([type])
  @@index([isActive])
}

model Itinerary {
  id          String   @id @default(cuid())
  tourId      String
  dayNumber   Int
  title       String
  description String
  location    String?  // e.g., "Masai Mara National Reserve"
  meals       String    @default("[]") // JSON array: Breakfast, Lunch, Dinner
  activities  String    @default("[]") // JSON array
  overnight   String?  // Display name for overnight stay

  // Legacy JSON fields (kept for backward compatibility during migration)
  availableAccommodationIds String  @default("[]") // JSON array of accommodation IDs available this night
  defaultAccommodationId    String? // Default accommodation for this night
  availableAddonIds         String  @default("[]") // JSON array of add-on IDs available this day

  // Relations
  tour        Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  accommodations ItineraryAccommodation[]
  addons      ItineraryAddon[]

  @@unique([tourId, dayNumber])
  @@index([tourId])
}

// Join table: Itinerary <-> AccommodationOption
model ItineraryAccommodation {
  id                    String              @id @default(cuid())
  itineraryId           String
  accommodationOptionId String
  isDefault             Boolean             @default(false) // Is this the default for this night?
  sortOrder             Int                 @default(0)

  itinerary             Itinerary           @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  accommodationOption   AccommodationOption @relation(fields: [accommodationOptionId], references: [id], onDelete: Cascade)

  @@unique([itineraryId, accommodationOptionId])
  @@index([itineraryId])
  @@index([accommodationOptionId])
}

// Join table: Itinerary <-> ActivityAddon
model ItineraryAddon {
  id              String        @id @default(cuid())
  itineraryId     String
  activityAddonId String
  isRecommended   Boolean       @default(false) // Highlight as recommended for this day
  sortOrder       Int           @default(0)

  itinerary       Itinerary     @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  activityAddon   ActivityAddon @relation(fields: [activityAddonId], references: [id], onDelete: Cascade)

  @@unique([itineraryId, activityAddonId])
  @@index([itineraryId])
  @@index([activityAddonId])
}

model AccommodationOption {
  id           String   @id @default(cuid())
  tourId       String
  dayNumber    Int?     // If null, applies to all days (pool-based)
  name         String
  description  String?
  tier         AccommodationTier
  pricePerNight Float
  images       String    @default("[]") // JSON array
  amenities    String    @default("[]") // JSON array
  location     String?
  rating       Float?

  // Enhanced fields
  roomType     String?   // e.g., "Double Room", "Suite", "Tent"
  isActive     Boolean   @default(true)
  sortOrder    Int       @default(0)

  tour         Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  bookingAccommodations BookingAccommodation[]
  itineraryAccommodations ItineraryAccommodation[]

  @@index([tourId])
  @@index([tier])
  @@index([isActive])
}

model ActivityAddon {
  id          String        @id @default(cuid())
  tourId      String
  name        String
  description String?
  price       Float
  duration    String?       // e.g., "2 hours", "Half day"
  images      String        @default("[]") // JSON array
  maxCapacity Int?
  dayAvailable String       @default("[]") // JSON array of day numbers

  // Enhanced categorization
  type        AddonType     @default(ACTIVITY)
  category    AddonCategory @default(ADVENTURE)

  // Pricing options
  priceType   String        @default("PER_PERSON") // "PER_PERSON" | "PER_GROUP" | "FLAT"
  childPrice  Float?        // Optional child-specific price

  // Display
  isPopular   Boolean       @default(false)
  sortOrder   Int           @default(0)
  isActive    Boolean       @default(true)

  tour        Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  bookingActivities BookingActivity[]
  itineraryAddons ItineraryAddon[]

  @@index([tourId])
  @@index([type])
  @@index([category])
  @@index([isActive])
}

model SeasonalPricing {
  id          String   @id @default(cuid())
  tourId      String
  name        String   // "Peak Season", "Low Season"
  startDate   DateTime
  endDate     DateTime
  priceMultiplier Float // e.g., 1.2 for 20% increase
  isActive    Boolean  @default(true)

  tour        Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId])
  @@index([startDate, endDate])
}

// ============================================================================
// TOUR PRICING CONFIGURATION
// ============================================================================

model TourPricing {
  id                    String   @id @default(cuid())
  tourId                String   @unique

  // Child pricing
  childDiscountPercent  Float    @default(30)   // e.g., 30 means 30% discount
  childMinAge           Int      @default(3)    // Minimum age to be considered child
  childMaxAge           Int      @default(11)   // Maximum age to be considered child

  // Infant pricing (usually free)
  infantMaxAge          Int      @default(2)    // Max age for infant (usually free)
  infantPrice           Float    @default(0)    // Usually 0

  // Service/booking fee
  serviceFeePercent     Float    @default(5)    // Platform service fee percentage
  serviceFeeFixed       Float?                  // Optional fixed service fee

  // Deposit settings (overrides tour defaults)
  depositPercent        Float?                  // Override deposit percentage
  depositMinimum        Float?                  // Minimum deposit amount

  // Group discounts
  groupDiscountThreshold Int?                   // Min group size for discount
  groupDiscountPercent  Float?                  // Discount percentage for groups

  // Early bird discount
  earlyBirdDays         Int?                    // Days before trip for early bird
  earlyBirdPercent      Float?                  // Early bird discount percentage

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  tour                  Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
}

// ============================================================================
// AVAILABILITY HOLDS (Prevents race conditions during checkout)
// ============================================================================

enum HoldStatus {
  ACTIVE      // Hold is currently active
  CONVERTED   // Hold converted to confirmed booking
  EXPIRED     // Hold expired without conversion
  RELEASED    // Hold manually released
}

model AvailabilityHold {
  id            String      @id @default(cuid())
  tourId        String
  userId        String?     // Optional - can be anonymous session

  // Hold details
  startDate     DateTime
  endDate       DateTime
  spotsHeld     Int         @default(1)

  // Session tracking (for non-authenticated users)
  sessionId     String?     // Browser session ID for anonymous users

  // Status
  status        HoldStatus  @default(ACTIVE)

  // Timing
  expiresAt     DateTime    // When the hold expires (default: 15 minutes)
  convertedAt   DateTime?   // When converted to booking
  bookingId     String?     // Resulting booking ID if converted

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  tour          Tour        @relation(fields: [tourId], references: [id], onDelete: Cascade)

  @@index([tourId])
  @@index([userId])
  @@index([sessionId])
  @@index([status])
  @@index([expiresAt])
  @@index([startDate, endDate])
}

// ============================================================================
// BOOKINGS
// ============================================================================

enum BookingStatus {
  PENDING
  CONFIRMED
  PAID
  IN_PROGRESS
  COMPLETED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum PaymentType {
  FULL          // Full payment upfront
  DEPOSIT       // Partial deposit payment
}

model Booking {
  id                String        @id @default(cuid())
  bookingReference  String        @unique @default(cuid())
  userId            String
  tourId            String
  agentId           String

  // Dates
  startDate         DateTime
  endDate           DateTime

  // Guests
  adults            Int           @default(1)
  children          Int           @default(0)
  infants           Int           @default(0)

  // Pricing
  baseAmount        Float
  accommodationAmount Float       @default(0)
  activitiesAmount  Float         @default(0)
  vehicleAmount     Float         @default(0)
  taxAmount         Float         @default(0)
  discountAmount    Float         @default(0)
  totalAmount       Float
  currency          String        @default("USD")

  // Commission
  platformCommission Float
  agentEarnings     Float

  // Status
  status            BookingStatus @default(PENDING)
  paymentStatus     PaymentStatus @default(PENDING)

  // Payment Type (Full or Deposit)
  paymentType       PaymentType   @default(FULL)
  depositAmount     Float?        // Amount paid as deposit
  balanceAmount     Float?        // Remaining balance to pay
  balanceDueDate    DateTime?     // When the balance is due
  balancePaidAt     DateTime?     // When balance was paid

  // Contact
  contactName       String
  contactEmail      String
  contactPhone      String
  specialRequests   String?

  // Cancellation
  cancelledAt       DateTime?
  cancellationReason String?
  refundAmount      Float?

  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  user              User          @relation(fields: [userId], references: [id])
  tour              Tour          @relation(fields: [tourId], references: [id])
  agent             Agent         @relation(fields: [agentId], references: [id])
  payments          Payment[]
  accommodations    BookingAccommodation[]  // Legacy
  activities        BookingActivity[]        // Legacy
  vehicles          BookingVehicle[]         // Legacy
  review            Review?

  // New catalog-based booking items
  bookingAddons           BookingAddon[]
